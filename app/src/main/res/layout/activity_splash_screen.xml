<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ConstraintLayoutSplash"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SplashScreen">



        <TextView
            android:id="@+id/textViewSplashScreen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="سامانه تجمیع پیامکهای مرکز فاوا"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:gravity="center"
            android:textSize="40sp"
            android:fontFamily="@font/entezar"
            android:paddingRight="10dp"
            android:paddingLeft="10dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"/>

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Erfan Ghaderi"
            android:textColor="@color/white"
            android:textSize="8sp"
            android:fontFamily="@font/harlowsi"
            android:layout_marginBottom="5sp"
            android:layout_marginLeft="5sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>